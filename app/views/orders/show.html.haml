%h2 Din bestilling:

%dl.dl-horizontal
  %dt Id:
  %dd #{@order.id}
  %dt Dato:
  %dd #{@order.created_at}
  %dt Påmelder:
  %dd #{@order.owner.name}
  %dt Total pris:
  %dd #{@order.price},-
  %dt Fullført:
  %dd
    = 'Ja' if @order.completed
    = 'nei' unless @order.completed

%h3 Påmeldte deltakere:
%table{:class => 'table table-striped'}
  %thead
    %tr
      %th= 'Name'
      %th= 'Email'
      %th= 'Billett'
      %th= 'Price'
  %tbody
    - for user in @order.users
      %tr
        %td #{user.name}
        %td #{user.email}
        %td= user.ticket.name
        %td #{user.ticket.price},-
    %tr
      %td{:colspan => 3}
      %td
        %strong #{@order.price},-
    %tr
      %td{:colspan => 4, :class => "text-right"}
        - unless @order.completed?
          %a{:href => "new_user"}
            %i.icon-plus-sign
            Legg til deltaker


- unless @order.completed?
