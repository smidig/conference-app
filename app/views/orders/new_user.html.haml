= simple_form_for @user, :html => {:class => 'form-horizontal'},  :url => url_for(:action => 'add_user', :controller => 'orders') do |f|
  %input{:type => "hidden", :name => "order_id", :value => "#{@order.id}"}
  = f.association :ticket, :collection => Ticket.visible, :label_method => :display, :selected => Ticket.default.id
  = f.input :email, :autofocus => true, :required => true
  = f.input :name
  = f.input :tlf
  .form-actions
    = f.button :submit, :class => 'btn-primary', :value => "Legg til deltaker"
    = link_to t('.cancel', :default => t("helpers.links.cancel")), {:action => "show", :id => @order.id}, :class => 'btn'