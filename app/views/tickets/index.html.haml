= render 'shared/indextitle'

%table.table.table-striped
  %thead
    %tr
      %th Navn
      %th Price
      %th Active
      %th Visible
      %th Type
      %th Nametag?
      %th Nametag Type
      %th
  %tbody
    - @tickets.each do |item|
      %tr
        %td= item.name
        %td= item.price
        %td= boolean_value item.active
        %td= boolean_value item.visible
        %td= item.ticket_type
        %td= boolean_value item.printflag
        %td= item.printname
        %td.text-right
          = render 'shared/showedit', :target => item
          = render 'shared/destroy', :target => item

= render 'shared/buttonrow'
