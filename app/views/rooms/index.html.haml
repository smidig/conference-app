= render 'shared/indextitle'

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Details
      %th
      %th

  %tbody
    - @rooms.each do |room|
      %tr
        %td= room.name
        %td= room.details
        %td.text-right
          = render 'shared/showedit', :target => room
        %td.text-right
          - if room.can_delete?
            = link_to 'Delete', room, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger'
          - else
            = pluralize(room.talk_count, 'talk')

= render 'shared/buttonrow', :new => true
