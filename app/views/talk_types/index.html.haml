= render 'shared/indextitle'

%table.table.table-striped
  %tr
    %th Name
    %th Duration
    %th Visible
    %th

  - @talk_types.each do |item|
    %tr
      %td= item.name
      %td= item.duration
      %td= item.visible
      %td.text-right
        = render 'shared/showedit', :target => item
        = render 'shared/destroy', :target => item

= render 'shared/buttonrow', :new => true
