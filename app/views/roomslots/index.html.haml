= render 'shared/indextitle'

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Details
      %th
      %th

  %tbody
    - @roomslots.each do |item|
      %tr
        %td
          #{item.room.name}: #{item.timeslot.start} - #{item.timeslot.end}
        %td.text-right
          = render 'shared/showedit', :target => item
          = render 'shared/destroy', :target => item

= render 'shared/buttonrow', :new => true
