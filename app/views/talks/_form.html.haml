= simple_form_for @talk, :html => {:multipart => true, :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :description
  = f.association :talk_type
  = f.association :talk_category
  - if @talk.presentation.file?
    %div.control-group
      %label.control-label
        Nåvarende presentasjon
      %div.controls
        = link_to @talk.presentation.original_filename, @talk.presentation.url

  = f.input :presentation, :as => :file, :label => 'Last opp ny presentation'
  - if current_user.admin?
    = f.input :status, :collection => Talk::STATUS_OPTIONS, :label => 'Status'

  - if @talk.user or (@talk.user and current_user.admin?)
    = f.input :new_user, :label => 'Legg til taler'
    = f.association :users, as: :check_boxes, collection: @talk.users, :label => 'Nåvarende talere'
      
  .form-actions
    = f.button :submit, :class => 'btn-primary', :value => 'Lagre endringer'