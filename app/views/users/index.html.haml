%table{:class => 'table'}
  %thead
    %tr
      %th= 'Navn'
      %th= 'Email'
      %th= 'Ticket'
      %th= 'Price'
      %th= 'User complete'
      %th= 'Order'
      %th= 'Handling'
  %tbody
    - for user in @users
      %tr
        %td= user.name
        %td= user.email
        %td= user.ticket.name if user.ticket
        %td= user.ticket.price if user.ticket
        %td
          - if user.completed
            = link_to 'Ja', {:action => 'complete', :id => user.id, :completed => false}, :title => "Sett ikke fullfÃ¸r"
          - else
            = link_to 'Nei', {:action => 'complete', :id => user.id, :completed => true}, :title => "Sett fullfÃ¸rt"
        %td= link_to '#'+user.order.id.to_s, {:controller => :orders, :action => 'show', :id => user.order.id} if user.order
        %td= link_to 'Delete', {:action => 'destroy', :id => user.id }, :confirm =>"Are you sure", :method=>:delete, :class => 'btn btn-danger'