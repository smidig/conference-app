      %li
        = link_to('Sign up', new_user_registration_path)
    - if user_signed_in? # bare adminbrukere som bør få se disse
      %ul{:class => "nav secondary-nav"}
        %li.dropdown
          = link_to 'Admin', '#', {:class => 'dropdown-toggle', "data-toggle" => "dropdown"}
