!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Smidig 2013 - 5. og 6. november i Oslo"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href => "http://fonts.googleapis.com/css?family=Merriweather+Sans:400,300,700,800", :rel => "stylesheet", :type => "text/css"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body.smidig
    #header.container
      .row-fluid
        .span10.offset1
          %header.header
            %a.brand{:href=>"/"}
              Smidig 2013
            = render 'layouts/navigation'
      - if current_page?('/')
        .row-fluid
          .span12
            = render :partial => "layouts/topslider"
        .row-fluid
          .span10.offset1
            = render :partial => "layouts/intro"
    - if current_page?('/')
      = render :partial => 'sponsors/list'
    #main.container
      .row-fluid
        .span10.offset1.content-wrapper
          = render 'layouts/messages'
          = yield
    - if !current_page?('/')
      = render :partial => 'sponsors/list'

    #footer.container
      .row-fluid
        .span10.offset1
          .row-fluid.footer-wrapper
