!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Smidig 2013 - 5. og 6. november i Oslo"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href => "http://fonts.googleapis.com/css?family=Ubuntu", :rel => "stylesheet", :type => "text/css"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href=>"/"}
            =image_tag("smidig_logo_24_inverted.png")
            Smidig 2013
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            Meny
          .nav-collapse.collapse
            = render 'layouts/navigation'
          .pull-right.fb-like.desktop{:data => { |
                            :href=>"http://facebook.com/smidig", |
                            :send=>"false", |
                            :show_faces=>"false", |
                            :font=>"verdana", |
                            :layout=>"button_count"}}

    #innhold.container
      #main.container
        .row
          .span12
            = render 'layouts/messages'
            = yield

      #footer.container
        .row
          .span4
            / Widget 1
            .widget
              %aside
                %a.twitter-follow-button{"data-show-count" => "false", :href => "https://twitter.com/smidig"} Follow @smidig
              %h4 Twitter 
              .tweet
          .span4
            / widget 2
            .widget
              %h4 Tidligere konferanser
              %ul
                %li
                  %a{:href => "http://vimeo.com/smidig"} Videoarkiv på Vimeo
                %li
                  %a{:href => "http://smidig2012.no"} smidig2012.no,
                  %a{:href => "http://smidig2011.no"} smidig2011.no,
                  %a{:href => "http://smidig2010.no"} smidig2010.no,
                  %a{:href => "http://smidig2009.no"} smidig2009.no,
                  %a{:href => "http://smidig2008.no"} smidig2008.no,
                  %a{:href => "http://smidig2007.no"} smidig2007.no
          .span4
            / Widget 3
            .widget
              %h4 Følg oss på sosiale medier
              %ul
                %li
                  %a{:href => "https://twitter.com/smidig", :target => "_blank"} twitter.com
                %li
                  %a{:href => "http://www.facebook.com/smidig", :target => "_blank"} facebook.com
                %li
                  %a{:href => "http://lanyrd.com/2013/smidig/", :target => "_blank"} lanyrd.com
                %li
                  %a{:href => "https://www.linkedin.com/groups?gid=963587", :target => "_blank"} linkedin.com
        %hr/
        %p.text-center

          %a{:href => "mailto:kontakt@smidig.no"}
            %i.icon-envelope.icon-white
            kontakt@smidig.no
